<article class="post" style="border-bottom: 1px solid lightblue">

  <section class="post-head mt-2 mb-3">

    <h2><%= @post.title %></h2>

    <link>

    <time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>

    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>

    </small>

  </section>

  <section class="post-body mt-2 mb-2  ">
